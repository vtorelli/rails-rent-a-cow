
<div class="wrapper">
  <div class="header-banner">
    <h1>BOOKINGS</h1>
  </div>

  <div class="container" id="show-cow-container">
    <ul class="booking-cards">
      <% @bookings.each do |booking| %>
        <div class="booked-cow-card">
          <%= cl_image_tag booking.cow.photo.key, crop: :fill %>
          <div class="booked-cow-card-content">
            <div class="booked-cow-infos">
              <h2>You booked <strong id="booked-cow-name"><%= booking.cow.name %></strong>, good choice! </h2>

              <p><%= booking.duration %> days starting on <%= booking.start_date.strftime('%b %d, %Y') %> in <%= booking.location %></p>


              <div class="booked-cow-owner-info">
                <%= image_tag "user.png", class: "booked-cow-card-user" %>
                <p>This cow is owned by <a href="#"><%= booking.cow.user.first_name %></a></p><br>
              </div>
            </div>

            <div class="booked-cow-price">
              <p>Total price</p>
              <p>(<%= booking.cow.price_per_day %>€ / day)</p>
              <h3><%= booking.cow.price_per_day * booking.duration %> €</h3>
            </div>
          </div>

          <div class="booked-cow-links">
            <%= link_to "Edit", edit_cow_booking_path(booking.cow, booking), class: "blue-button"  %>

            <%= link_to "Delete", cow_booking_path(booking.cow, booking), class: "red-button", data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to delete this booking?" } %>
          </div>
        </div>
      <% end %>
    </ul>
  </div>
</div>
