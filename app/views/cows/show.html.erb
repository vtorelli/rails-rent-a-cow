<div class="wrapper">
  <div class="container">

    <div class="card-individual-cow">
      <%= cl_image_tag @cow.photo.key %>
      <div class="card-individual-cow-infos">
        <div>
          <h2 class="text-uppercase fw-bold"><%= @cow.name %></h2>
          <p><%= @cow.description %></p>
        </div>

        <h2 class="card-individual-cow-pricing"><%= @cow.price_per_day %>â‚¬/day</h2>
       </div>

      <div class="cow-owner-info">
        <%= image_tag "user.png", class: "card-individual-cow-user" %>
        <p>This cow is owned by <a href="#"><%= @cow.user.first_name %></a></p>
      </div>

      <div class="cow-show-links">
        <% if @cow.user_id == current_user.id %>
          <%= link_to "Edit", edit_cow_path(@cow) %>
          <%= link_to "Delete", cow_path(@cow), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"} %>
        <% else %>
          <%= link_to "Book this cow!", new_cow_booking_path(@cow), class: "blue-btn" %> <br>
        <% end %>
      </div>
    </div>



    <div class="cow-tags">
    <% @cow.tags.each do |tag| %>
      <button type="button" class="h-50 btn btn-warning btn-sm my-2"><%= tag.name %></button>
    <% end %>
    </div>
    <%= render "tag", cow: @cow, tag: @tag %>

    <br>


  </div>
</div>
