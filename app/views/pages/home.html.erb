<div class="wrapper">
  <div class="hero-homepage-banner">
    <div class="hero-banner-title">
      <i class="fa-solid fa-cow hero-banner-logo"></i>
      <h1 class="fw-bold">RENT-A-COW</h1>
      <p>Need to mow your lawn? Filming a commercial? Need emotional support? Say no more!</p>
    </div>
  </div>
</div>

<div class="page-content">
  <% if user_signed_in? %>
    <p class="user-greeting">Hello <%= current_user.first_name %>!</p>
  <% else %>

  <p class="user-greeting">
    Here are some cute cows, <%= link_to " log in ", new_user_session_path, class: "nav-link" %> to book a cow !
  </p>
  <% end %>

  <%= render "shared/allcows", home: true %>
</div>
